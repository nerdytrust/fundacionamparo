crud form
<?php $__env->stopSection(); ?>

<?php $__env->startSection("jumbotron"); ?>
<?php $__env->stopSection(); ?>


<?php $__env->startSection("content"); ?>


<?php echo $__env->make("crud.toolbar-form", array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>





<div class="container">
	
	<?php if($action == "create"): ?>
    	<?php echo Form::model($model, array('route' => array($model.'.store'), 'method' => 'POST')); ?>

    <?php elseif($action == "edit"): ?>
    	<?php echo Form::model($model, array('route' => array($model.'.update', $key_value), 'method' => 'PUT')); ?>

	<?php endif; ?>

        
        <?php echo $__env->yieldContent("form"); ?>
        




	<?php if($action == "create"): ?>
    <?php if(in_array("create",$btn)): ?>
		  <?php echo Form::submit(ucfirst($action), array('class' => 'btn btn-success')); ?>

    <?php endif; ?>
    <?php if(in_array("cancel",$btn)): ?>
      <a href="<?php echo call_user_func("URL::to",$model."/".$key_value); ?>" class="btn btn-default">Cancel</a>
    <?php endif; ?>
    <?php if(in_array("create",$btn)): ?>
      <?php echo Form::close(); ?>

    <?php endif; ?>  
  <?php endif; ?>	

  <?php if($action == "edit"): ?>
    <?php if(in_array("edit",$btn)): ?>
      <?php echo Form::submit(ucfirst($action), array('class' => 'btn btn-success')); ?>

    <?php endif; ?>
    <?php if(in_array("cancel",$btn)): ?>
      <a href="<?php echo call_user_func("URL::to",$model."/".$key_value); ?>" class="btn btn-default">Cancel</a>
    <?php endif; ?>
    <?php if(in_array("edit",$btn)): ?>
      <?php echo Form::close(); ?>

    <?php endif; ?>  
  <?php endif; ?>


  <?php if($action == "show"): ?>

    <?php if(in_array("edit",$btn)): ?>
      <a href="<?php echo call_user_func("URL::to",$model."/".$key_value."/edit"); ?>" class="btn btn-success">Edit</a>
    <?php endif; ?>

    <?php if(in_array("cancel",$btn)): ?>
      <a href="<?php echo call_user_func("URL::to",$model."/".$key_value); ?>" class="btn btn-default">Cancel</a>
    <?php endif; ?>
    <?php if(in_array("print",$btn)): ?>
      <a class="btn btn-small btn-default" target="_blank" href="<?php echo URL::to($model.'/'. $key_value.'/print'); ?>">Print</a>
    <?php endif; ?>

  <?php endif; ?>  


</div>

<div class="padding-top-lg">
  <?php echo $__env->make("crud.toolbar-form", array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
</div>


  <?php if($action == "show"): ?>
    <div class="container margin-top-md">
      <?php echo $__env->yieldContent("form-tabs"); ?>
    </div>
  <?php endif; ?>

<?php $__env->stopSection(); ?>


<?php echo $__env->make("layout", array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>