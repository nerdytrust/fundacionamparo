crud index
<?php $__env->stopSection(); ?>

<?php $__env->startSection("jumbotron"); ?>
<?php $__env->stopSection(); ?>


<?php $__env->startSection("content"); ?>



		<?php echo $__env->make("admin.crud.toolbar", array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>



	<div class="table-responsive">
		<table class="table table-striped table-bordered ">
			<thead>
				<tr>
					<?php foreach($columns as $column): ?>
						<td> <?php echo $column->label; ?> </td> 
						
					<?php endforeach; ?>
					
					<?php if((bool) array_intersect(["create","edit","show","delete"], $btn)): ?>
		            	<td><?php echo trans('crud.action'); ?></td>
		            <?php endif; ?>	
				</tr>
			</thead>
			<tbody>


			
			<?php foreach($records as $record): ?>
				<tr>

					<?php foreach($columns as $column): ?>
						<?php if($column->is_foreign_key): ?>
							<?php if(count($fk_column) > 0): ?>
								<td> <?php echo HTML::link(strtolower($columns->{$column->name}->model)."/".$record->{$column->name},getFKColumn($fk_column,$column,$record,false)); ?>  </td>
							<?php else: ?>
								<td> <?php echo HTML::link(strtolower($columns->{$column->name}->model)."/".$record->{$column->name},$record->{$column->name}); ?>  </td>
							<?php endif; ?>
						<?php else: ?>
							<td> <?php echo $record->{$column->name}; ?>  </td> 
						<?php endif; ?>
						
					<?php endforeach; ?>

					<?php if((bool) array_intersect(["create","edit","show","delete"], $btn)): ?>
					<!-- we will also add show, edit, and delete buttons -->
					<td style="width:300px">

						<?php echo Form::open(array('url' => $model.'/' . $record->{ $key_name })); ?>

						<div class="btn-group input-group btn-group-justified" role="group" aria-label="...">

						  <?php if(!Entrust::can($model."/show") and in_array("show",$btn)): ?>
							  <div class="btn-group" role="group">
							    <a class="btn btn-small btn-success" href="<?php echo URL::to($model.'/' . $record->{ $key_name }); ?>"><?php echo trans('crud.show'); ?></a>
							  </div>
						  <?php endif; ?>
						  <?php if(!Entrust::can($model."/print") and in_array("print",$btn)): ?>
							  <div class="btn-group" role="group">
							    <a class="btn btn-small btn-default" target="_blank" href="<?php echo URL::to($model.'/'. $record->{ $key_name }.'/print'); ?>"><?php echo trans('crud.print'); ?></a>
							  </div>
						  <?php endif; ?>
						  <?php if(!Entrust::can($model."/edit") and in_array("edit",$btn)): ?>
							  <div class="btn-group" role="group">
							    <a class="btn btn-small btn-info"  href="<?php echo URL::to($model.'/' . $record->{ $key_name } . '/edit'); ?>"><?php echo trans('crud.edit'); ?></a>
							  </div>
						   <?php endif; ?>
						   	  
						  <?php if(!Entrust::can($model."/destroy") and in_array("delete",$btn)): ?> 	  
							  <div class="btn-group" role="group">
									<?php echo Form::hidden('_method', 'DELETE'); ?>

									<a class="btn btn-small btn-warning" data-toggle="confirmation" data-placement="bottom"><?php echo trans('crud.delete'); ?></a>
									
							  </div>
						  <?php endif; ?>
						</div>
						<?php echo Form::close(); ?>





					</td>
					<?php endif; ?>

				</tr>
			<?php endforeach; ?>
			</tbody>
		</table>

			<?php if(count($records) == 0): ?>
				<div class="padding-lg">
					<p class="text-center"><?php echo trans('crud.not_records_found'); ?></p>
				</div>
				
			<?php endif; ?>
	</div>

		<?php echo $__env->make("admin.crud.toolbar", array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
		
	

<?php $__env->stopSection(); ?>




<?php echo $__env->make("admin.layout", array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>